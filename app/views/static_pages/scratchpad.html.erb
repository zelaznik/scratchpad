<%= render 'header', active: 'scratchpad' %>

<div class="container">
    <%= render 'breadcrumbs', parents: [], child: 'Home' %>

  <h1><center>Thumbnail Class</center></h1>
  <div class="thumbnail">
    <a href="#">
      <img  class="media-object img-thumbnail"
            src="http://res.cloudinary.com/cosmo-connect/image/upload/c_limit,w_200,h_200/v1441875679/pp09jj6vri2bgjvsmdau.jpg"
            alt"Steve Zelaznik"
      >
    </a>
    <div class="caption">
      <h2>Steve Zelaznik</h2>
      <h4>Software Engineer</h4>
      <p>Award winning journalist, actuary, and now full stack engineer.</p>
      <p><a class="btn btn-primary btn-xs" href="#">More &rqguo;</a></p>
    </div>
  </div>

  <h1><center>Input Group With Addons</center></h1>
  <div class="input-group">
    <div class="input-group-addon">(</div>
      <input
        type="tel" class="form-control"
        id="areacode" name="areacode"
        placeholder="Area Code">
      </input>
    <div class="input-group-addon">)</div>
  </div>


  <h1><center>Inline Form</center></h1>
  <form class="form-inline" role="form">
    <div class="form-group">
      <label class="sr-only" for="email">Email Address</label>
      <input type="email" class="form-control" id="email" placeholder="Email">
    </div>
    <div class="form-group">
      <label class="sr-only" for="password">Password</label>
      <input type="password" class="form-control" id="password" placeholder="Password">
    </div>
    <div class="checkbox">
      <label><input type="checkbox">Remember me</label>
    </div>
    <button type="submit" class="btn btn-default">Sign In</button>
  </form>

  <h1><center>Form Horizontal</center></h1>
  <form class = "form-horizontal" role="form">
    <div class="form-group">
      <label for="firstname" class="col-sm-2 control-label">First Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="firstname"
          name = "firstname" placeholder="Enter First Name">
      </div>
    </div>
  </form>

</div>
